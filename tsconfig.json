{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "outDir": "out",
        "noImplicitThis": true,
        "isolatedModules": true,
        "strict": true,
        "importsNotUsedAsValues": "error",
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}